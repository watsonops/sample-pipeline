@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Reset your password";
}

<div class="pt-5 pb-4 width-full container text-center width-full">
    <image src="shared/img/logo.svg" height="48" width="48" />
</div>
<div class="px-3 mx-auto my-0" style="width: 340px;">
    <div class="p-0 text-center mb-3">
        <h1 class="f2-light" style="letter-spacing: -0.5px;">Reset your password</h1>
    </div>

    @await Html.PartialAsync("_ValidationSummary")

    <div class="mt-3 Box color-bg-subtle p-3">
        <form method="post">
            <label asp-for="Input.Email" class="mb-2 d-block" style="font-weight: 400;">Enter your account's verified email address and we will send you a password reset link.</label>
            <input asp-for="Input.Email" class="form-control input-block mb-3" autocomplete="username" aria-required="true" placeholder="Enter your email address">
            <button type="submit" class="btn btn-primary btn-block">Send password reset email</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_FooterLinks")
